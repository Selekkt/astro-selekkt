---
export interface Props { post: any; }

const { post } = Astro.props;
---

<article class="post-preview">
    <a href={post.url}>
    {post.heroImage && <img width="720" height="420" class="post-main__img" loading="lazy" src={post.heroImage} alt={post.alt} />}
        <h2 class="title">{post.title}</h2>
    </a>
    <time class="publish-date">{post.publishDate}</time>
    <p>{post.description}</p>
</article>

