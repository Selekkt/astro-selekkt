---
import { Markdown } from 'astro/components';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import BlogPost from '../components/BlogPost.astro';

const {content} = Astro.props;
const {title, description, publishDate, author, heroImage, permalink, alt} = content;
---
<!doctype html>
<html class="no-js" lang={ content.lang || 'en' }>
    <head>
        <BaseHead title={title} description={description} permalink={permalink} ogImageUrl={heroImage} publishDate={publishDate} canonicalURL={Astro.request.canonicalURL} articleSchema />
    </head>
    <body>
    <div id="app">
        <Header />
        <main>
            <BlogPost title={title} author={author} heroImage={heroImage} publishDate={publishDate} alt={alt}>
                <slot />
            </BlogPost>
        </main>
        <Footer />
    </div>
    </body>
</html>